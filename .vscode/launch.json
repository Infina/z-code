{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Start Browser Backend",
            "cwd": "${workspaceFolder}/apps/francis-ide-browser",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": [
                "run",
                "start:dev",
                "--",
                "--port=3000"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/apps/francis-ide-browser",
            "userDataDir": false
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Start Desktop App (Electron)",
            "cwd": "${workspaceFolder}/apps/francis-ide-electron",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": [
                "start"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ],
    "compounds": [
        {
            "name": "Francis Browser (Backend + Chrome)",
            "configurations": [
                "Start Browser Backend",
                "Launch Chrome"
            ]
        }
    ]
}
